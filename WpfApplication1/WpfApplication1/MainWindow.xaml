<Window x:Name="Main_Window" x:Class="Tissue_Dashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Tissue Dashboard" Height="430" Width="655" BorderThickness="5">

    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>

    <Grid Background="#FFE5EAEE" Cursor="Arrow">
        <Grid.Resources>
            <Style TargetType="{x:Type Label}">
                <Setter Property="Foreground" Value="White"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="92*"/>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="434*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>

        <Frame x:Name="Browser" Content="" Grid.Column="2" HorizontalAlignment="Left" Height="394" Margin="0,-5,0,0" VerticalAlignment="Top" Width="434"/>

        <Button x:Name="button" Content="Request Tissue" HorizontalAlignment="Left" Height="37" Margin="31,51,0,0" VerticalAlignment="Top" Width="139" Click="button_Click_1" BorderThickness="2" ToolTip="This is how you begin a tissue request!" Cursor="Hand" FontWeight="Bold" Grid.Column="2"/>
        <GridSplitter x:Name="gridSplitter" HorizontalAlignment="Left" Height="309" Margin="54,0,0,0" VerticalAlignment="Top" Width="0"/>
        <Frame x:Name="frame" Content="" HorizontalAlignment="Left" Height="389" VerticalAlignment="Top" Width="204" Background="#2C3E50" NavigationUIVisibility="Hidden" Focusable="False" Margin="-1,0,0,0" Grid.ColumnSpan="2"/>
        <Label x:Name="Archival_Frame" Content="Archival" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="58,134,42,0" Width="103" FontSize="18" Foreground="White" Height="34" />
        <Label x:Name="Fresh_Frame" Content="Fresh" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="59,200,41,0" Width="103" FontSize="18" Foreground="White" Height="34"/>
        <Image x:Name="image" Height="53" VerticalAlignment="Top" Grid.ColumnSpan="2" Source="SC_logo_tag_pms_color.jpg" Stretch="UniformToFill" Margin="-1,0,0,0"/>
        <Label x:Name="Reports_Frame" Content="Reports" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="59,266,41,0" Width="103" FontSize="18" Foreground="White" Height="34"/>
        <Label x:Name="Main_Frame" Content="Main" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="58,74,41,0" Width="104" FontSize="18" Foreground="White" Height="34" Grid.ColumnSpan="2"/>

    </Grid>


</Window>
